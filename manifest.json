{
    "name": "Penguini Steam Enhancement",
    "version": "1.0.3",
    "description": "Adds extended functionality and cosmetic elements to Steam.",
    "manifest_version": 3,
    "content_scripts": [
        {
            "js": [
                "lib/InjectionService.js",
                "src/Util.js"
            ],
            "matches": [
                "*://steamcommunity.com/*"
            ]
        },
        {
            "js": [
                "src/listings.js"
            ],
            "matches": [
                "*://steamcommunity.com/market/listings/*"
            ]
        },
        {
            "js": [
                "src/market.js"
            ],
            "matches": [
                "*://steamcommunity.com/market/"
            ]
        }
    ],
    "permissions": [],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}